script/source = "extends Area2D

const EXPLOSION = preload(\"res://Scenes/Effects/WallCollision.tscn\")

#https://kidscancode.org/godot_recipes/2d/grid_movement/
onready var ray = $CollisionDetection
onready var wallDetection = $WallDetection
onready var tween = $Tween
onready var MoveSound = $MoveSound
onready var ExplosionSound = $ExplosionSound
onready var timer = $Timer
onready var collision = $Area2D

export var speed = 5

var boxInFront = false
var box = null
var seeked = false
var tile_size = 16
var inputs = {\"right\": Vector2.RIGHT,
			\"left\": Vector2.LEFT,
			\"up\": Vector2.UP,
			\"down\": Vector2.DOWN}

func _ready():
	position = position.snapped(Vector2.ONE * tile_size)
	position += Vector2.ONE * tile_size/2

func _unhandled_input(event):
	if tween.is_active():
		return
	for dir in inputs.keys():
		if Input.is_action_just_pressed(dir):
			move(inputs.get(dir))

func move(dir):
	$Area2D/CollisionShape2D2.rotation_degrees = rad2deg(dir.angle()) - 90
	ray.cast_to = dir * tile_size
	ray.force_raycast_update()
	wallDetection.cast_to = dir * (tile_size * 2)
	wallDetection.force_raycast_update()
	if boxInFront:
		move_tween_with_Box(dir)
		MoveSound.play()
	if wallDetection.is_colliding() && !ray.is_colliding():
		MoveSound.play()
		var x = EXPLOSION.instance()
		get_parent().add_child(x)
		x.position = global_position + dir * tile_size * 1.5
		x.look_at(global_position)
		x.boom()
		ExplosionSound.play()
	if !ray.is_colliding() && !boxInFront:
		#position += dir * tile_size
		move_tween(dir)
		MoveSound.play()

func move_tween(dir):
	seeked = false
	tween.interpolate_property(self, \"position\",
		position, position + dir * tile_size,
		#Change Tween.Trans_X for different movement style
		1.0/speed, Tween.TRANS_BACK, Tween.EASE_IN_OUT)
	tween.start()
	
func move_tween_with_Box(dir):
	if boxInFront:
		tween.interpolate_property(self, \"position\",
			position, position + dir * tile_size,
			#Change Tween.Trans_X for different movement style
			1.0/speed, Tween.TRANS_BACK, Tween.EASE_IN_OUT)
		
		tween.interpolate_property(box, \"position\",
			box.position, box.position + dir * tile_size,
			#Change Tween.Trans_X for different movement style
			1.0/speed, Tween.TRANS_BACK, Tween.EASE_IN_OUT)
			
		tween.start()
	else:
		return

func _on_Timer_timeout():
	print(\"Timer stopped!\")

func _on_Area2D_area_entered(area):
	if area.is_in_group(\"Box\"):
		box = area
		boxInFront = true

func _on_Area2D_area_exited(area):
	box = null
	boxInFront = false
"

